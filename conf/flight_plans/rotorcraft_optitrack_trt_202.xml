<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="148" ground_alt="147" lat0="51.990632" lon0="4.376789" max_dist_from_home="150" name="Rotorcraft Basic (Enac)" security_height="2">
  <header>
#include "autopilot.h"
</header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="0.0" y="5.0"/>
    <waypoint name="STDBY" x="-2.0" y="-5.0"/>
    <waypoint name="TD" x="5.6" y="-10.9"/>
    <waypoint name="FLY1" x="-0.2" y="3.7"/>
    <waypoint name="FLY2" x="1.7" y="0.5"/>
    <waypoint name="FLY3" x="-1.8" y="-1.7"/>
    <waypoint name="FLY4" x="-3.8" y="1.5"/>
    <waypoint lat="51.990639" lon="4.376807" name="p1"/>
    <waypoint lat="51.990639" lon="4.376807" name="p2"/>
    <waypoint lat="51.990639" lon="4.376807" name="p3"/>
    <waypoint lat="51.990639" lon="4.376807" name="p4"/>
    <waypoint lat="51.990639" lon="4.376807" name="p5"/>
    <waypoint lat="51.990639" lon="4.376807" name="p6"/>
    <waypoint lat="51.990639" lon="4.376807" name="p7"/>
    <waypoint lat="51.990639" lon="4.376807" name="p8"/>
    <waypoint lat="51.990635" lon="4.376836" name="FA1"/>
    <waypoint lat="51.990606" lon="4.376760" name="FA2"/>
    <waypoint lat="51.990652" lon="4.376712" name="FA3"/>
    <waypoint lat="51.990681" lon="4.376791" name="FA4"/>
  </waypoints>
  <sectors>
    <sector color="orange" name="Flight_Area">
      <corner name="FLY1"/>
      <corner name="FLY2"/>
      <corner name="FLY3"/>
      <corner name="FLY4"/>
    </sector>
    <sector color="red" name="Red">
      <corner name="FA4"/>
      <corner name="FA3"/>
      <corner name="FA2"/>
      <corner name="FA1"/>
    </sector>
  </sectors>
  <exceptions>
    <exception cond="! InsideFlight_Area(GetPosX(), GetPosY()) && !(nav_block == IndexOfBlock('Wait GPS')) && !(nav_block == IndexOfBlock('Geo init')) && !(nav_block == IndexOfBlock('Holding point')) && !(nav_block == IndexOfBlock('landed')) && !(nav_block == IndexOfBlock('Standby')) " deroute="Standby"/>
  </exceptions>
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <call fun="NavSetWaypointHere(WP_TD)"/>
      <call fun="NavSetAltitudeReferenceHere()"/>
    </block>
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 2.0" deroute="Standby"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="0.5" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="Standby Here" strip_button="Standby" strip_icon="home.png">
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <stay wp="STDBY"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <stay wp="STDBY"/>
    </block>
    <block name="route_p1">
      <go wp="p1"/>
    </block>
    <block name="route_p2">
      <go from="p1" hmode="route" wp="p2"/>
    </block>
    <block name="route_p3">
      <go from="p2" hmode="route" wp="p3"/>
    </block>
    <block name="route_p4">
      <go from="p3" hmode="route" wp="p4"/>
    </block>
    <block name="route_p5">
      <go from="p4" hmode="route" wp="p5"/>
    </block>
    <block name="route_p6">
      <go from="p5" hmode="route" wp="p6"/>
    </block>
    <block name="route_p7">
      <go from="p6" hmode="route" wp="p7"/>
    </block>
    <block name="route_p8">
      <go from="p7" hmode="route" wp="p8"/>
      <stay wp="p8"/>
    </block>
    <block name="land here" strip_button="Land Here" strip_icon="land-right.png">
      <call fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land">
      <go wp="TD"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="-0.8" vmode="climb" wp="TD"/>
    </block>
    <block name="landed">
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
